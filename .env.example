# Insurance Voice AI POC - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Twilio Configuration
# ===========================================
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# Voice AI Services
# ===========================================
# Deepgram (Speech-to-Text)
# Get from https://console.deepgram.com
DEEPGRAM_API_KEY=your_deepgram_key_here

# ElevenLabs (Text-to-Speech)
# Get from https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Default: Rachel

# ===========================================
# Claude API (Conversation Orchestration)
# ===========================================
# Get from https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_key_here

# ===========================================
# Server Configuration
# ===========================================
BACKEND_PORT=3001
DASHBOARD_PORT=3000
MOCK_IVR_PORT=3002

# ===========================================
# Database
# ===========================================
DATABASE_PATH=./data/database.sqlite

# ===========================================
# Development Settings
# ===========================================
# Set to 'production' in production
NODE_ENV=development

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===========================================
# Mock IVR Configuration
# ===========================================
# Simulated delays (milliseconds)
IVR_RESPONSE_DELAY=500
IVR_HOLD_DURATION=3000

# ===========================================
# Webhook URLs (set after ngrok is running)
# ===========================================
# TWILIO_WEBHOOK_URL=https://your-ngrok-url.ngrok.io/api/webhooks/twilio
# MOCK_IVR_URL=https://your-ngrok-url.ngrok.io/voice
