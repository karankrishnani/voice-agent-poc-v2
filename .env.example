# Insurance Voice AI POC - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Twilio Configuration
# ===========================================
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# Voice AI Services
# ===========================================
# Deepgram (Speech-to-Text)
# Get from https://console.deepgram.com
DEEPGRAM_API_KEY=your_deepgram_key_here

# ElevenLabs (Text-to-Speech)
# Get from https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Default: Rachel

# ===========================================
# Claude API (Conversation Orchestration)
# ===========================================
# Get from https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_key_here

# ===========================================
# Server Configuration
# ===========================================
BACKEND_PORT=3001
DASHBOARD_PORT=3000
MOCK_IVR_PORT=3002

# ===========================================
# Database
# ===========================================
DATABASE_PATH=./data/database.sqlite

# ===========================================
# Development Settings
# ===========================================
# Set to 'production' in production
NODE_ENV=development

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===========================================
# Mock IVR Configuration
# ===========================================
# Simulated delays (milliseconds)
IVR_RESPONSE_DELAY=500
IVR_HOLD_DURATION=3000

# ===========================================
# Webhook URLs (set after ngrok is running)
# ===========================================
# Phase 1 webhooks (TwiML-based)
# TWILIO_WEBHOOK_URL=https://your-ngrok-url.ngrok.io/api/webhooks/twilio
# MOCK_IVR_URL=https://your-ngrok-url.ngrok.io/voice

# Phase 2 webhooks (ConversationRelay WebSocket)
# AGENT_WEBHOOK_URL=https://your-ngrok-url.ngrok.io/agent/voice
# AGENT_WEBSOCKET_URL=wss://your-ngrok-url.ngrok.io/ws

# ===========================================
# Phase 2: ConversationRelay Configuration
# ===========================================
# See docs/PHASE2-STREAMING.md for details

# ConversationRelay provider settings
CONVERSATIONRELAY_TRANSCRIPTION_PROVIDER=deepgram
CONVERSATIONRELAY_SPEECH_MODEL=nova-2
CONVERSATIONRELAY_TTS_PROVIDER=elevenlabs
CONVERSATIONRELAY_VOICE=Polly.Matthew
CONVERSATIONRELAY_LANGUAGE=en-US

# Python Agent settings
AGENT_PORT=8000
BACKEND_URL=http://localhost:3001

# Python Agent URLs (for backend to communicate with agent)
PYTHON_AGENT_PORT=8000
PYTHON_AGENT_URL=http://localhost:8000
WEBSOCKET_URL=ws://localhost:8000/ws

# Retry/Fallback settings
CONFIDENCE_THRESHOLD=60
MAX_MENU_RETRIES=3
MAX_INFO_RETRIES=2
MAX_UNCERTAIN_TOTAL=5
SILENCE_TIMEOUT=10
